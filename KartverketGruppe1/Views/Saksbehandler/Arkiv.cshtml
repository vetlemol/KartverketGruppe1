        /* Stiler for søkefelt og knapper */
        .search-container {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-left: 140px;
            margin-top: 10px;
        }

            .search-container input[type="text"] {
                padding: 10px;
                font-size: 13px;
                border: 1px solid #ccc;
                border-radius: 37px;
                width: 250px;
                margin-right: 10px;
            }

            .search-container button {
                padding: 10px;
                font-size: 13px;
                border: 1px solid #ccc;
                border-radius: 37px;
                background-color: white;
                cursor: pointer;
                margin-right: 5px;
            }

        .blue-box {
            background-color: #D8E3F2;
            color: black;
            padding: 20px;
            width: 1250px;
            height: auto;
            border-radius: 15px;
            text-align: center;
            margin-left: 140px;
            margin-top: 50px;
            margin-bottom: 0px;
        }

        /* Boksene inne i den store blå boksen */
        .item-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
        }

            .item-box .info {
                display: flex;
                align-items: center;
                width: 80%;
            }

                .item-box .info img {
                    width: 24px;
                    height: 24px;
                    margin-right: 15px;
                }

                .item-box .info span {
                    font-size: 14px;
                    margin-right: 40px;
                    color: #333;
                }

            .item-box .status {
                padding: 8px 15px;
                border-radius: 15px;
                font-size: 12px;
                font-weight: bold;
            }

        .status-handled {
            background-color: #b6d7a8;
            color: #fff;
        }

        .status-unfollowed {
            background-color: #ccc;
            color: #333;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 5px;
            padding: 10px;
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

            .pagination a {
                padding: 8px 12px;
                color: #1A3F71;
                text-decoration: none;
                border-radius: 4px;
                font-weight: normal;
            }

                .pagination a:hover {
                    background-color: #e6edf5;
                }

            .pagination .arrow {
                font-weight: bold;
                color: #1A3F71;
            }

            .pagination .active {
                background-color: green;
                color: white;
            }

        .sidebar {
            width: 200px;
            background-color: #D8E3F2;
            height: 100vh;
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0px;
            z-index: -1;
            padding-top: 80px;
        }

            .sidebar img.profile-pic {
                display: block;
                margin: 20px auto;
                border-radius: 50%;
                width: 65px;
                height: 65px;
                object-fit: cover;
                border: 3px solid #1A3F71;
                
            }

        .profile-pic-divider {
            width: 100%;
            height: 1px;
            background-color: #1A3F71; /* Blå farge som matcher andre linjer */
            margin: 10px 0; /* Avstand til profilbildet og menyelementene */
        }


        /* Menyelementer i sidebar */
        .menu-item {
            text-align: center;
            margin-top: 50px;
            font-size: 12px;
            font-weight: normal;
        }

            .menu-item img {
                display: block;
                margin: 0 auto;
                width: 30px;
                height: 30px;
                margin-bottom: 5px;
            }

            .menu-item a {
                color: #1A3F71;
                font-weight: normal;
                display: block;
                margin-top: 5px;
                text-decoration: none; /* Fjerner streken under lenken */
            }

                .menu-item a:hover {
                    color: #e6edf5;
                }

            /* Linje under hvert menyvalg */
            .menu-item .horizontal-line {
                height: 2px; /* Tykkelsen på linjen */
                background-color: #1A3F71; /* Fargen på linjen */
                width: 100%; /* Strekker linjen hele bredden */
                margin-top: 10px; /* Juster avstanden mellom tekst og linje */
