        /* Stil for Arkiv-overskriften */
        h1 {
            font-size: 24px;
            font-weight: normal;
            margin-top: 50px;
            margin-bottom: 20px;
            margin-left: 100px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 2px solid #ccc;
            width: 90%;
        }

        /* Stiler for søkefelt og knapper */
        .search-container {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-left: 100px;
            margin-top: 10px;
        }

            .search-container input[type="text"] {
                padding: 10px;
                font-size: 12px;
                border: 1px solid #ccc;
                border-radius: 37px;
                width: 200px;
                margin-right: 10px;
            }

            /* Dropdown stil */
            .search-container select {
                padding: 10px;
                font-size: 12px;
                border: 1px solid #ccc;
                border-radius: 37px;
                margin-right: 10px;
                background-color: white;
                cursor: pointer;
            }

        .blue-box {
            background-color: #D8E3F2;
            color: black;
            padding: 20px;
            width: 1000px;
            height: auto;
            border-radius: 15px;
            text-align: center;
            margin-left: 100px;
            margin-top: 23px;
        }

        /* Boksene inne i den store blå boksen */
        .item-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
        }

            .item-box .info {
                display: flex;
                align-items: center;
                width: 80%;
            }

                .item-box .info img {
                    width: 20px;
                    height: 20px; 
                    margin-right: 15px;
                }

                .item-box .info span {
                    font-size: 12px;
                    margin-right: 40px;
                    color: #333;
                }

            .item-box .status {
                padding: 8px 15px;
                border-radius: 15px;
                font-size: 12px;
                font-weight: bold;
            }

        .status-handled {
            background-color: #8EBF94;
            color: #fff;
        }

        .status-unfollowed {
            background-color: #ccc;
            color: #404040;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 5px;
            padding: 10px;
            font-family: Arial, sans-serif;
            font-size: 12px;
        }

            .pagination a {
                padding: 8px 12px;
                color: #1A3F71;
                text-decoration: none;
                border-radius: 4px;
                font-weight: normal;
            }

                .pagination a:hover {
                    background-color: #e6edf5;
                }

            .pagination .arrow {
                font-weight: bold;
                color: #1A3F71;
            }

            .pagination .active {
                background-color: green;
                color: white;
            }

        /* Menybar til venstre */
        .sidebar {
            width: 7%;
            background-color: #D8E3F2;
            padding: 0px;
            overflow-y: auto;
            text-decoration: none;
            font-size: 8px;
            position: fixed;
            top: 66px;
            height: calc(100%);
            left: 0px;
            align-items: center;
            display: flex;
            flex-direction: column;
        }

            /* Stiller knappene i sidebaren  */
            .sidebar button {
                background-color: transparent;
                color: #1A3F71;
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                box-sizing: border-box;
                font-size: 10px;
                margin-bottom: 15px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                position: relative;
            }

                /*  Hover-effekt som endrer bakgrunnsfargen */
                .sidebar button:hover {
                    background-color: #96B7D6;
                }

                /* Legger til en tynn, mårk blå linje under hvert button-element i sidebaren */
                .sidebar button::after {
                    content: '';
                    display: block;
                    width: 100%;
                    height: 0.25px; 
                    background-color: #1A3F71; 
                    position: absolute;
                    bottom: 0;
                    left: 0;
                }


       
        /* Plassering av bildet i sidebaren */
        .profile-pic {
            display: flex;
            justify-content: center;
            margin-top: 20px; 
            margin-bottom: 20px;
        }

