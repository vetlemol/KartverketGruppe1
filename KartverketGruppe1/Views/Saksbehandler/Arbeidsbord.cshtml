            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

            button:hover {
                background-color: #96B7D6;
            }

        .info p, .notification-list p {
            margin-bottom: 10px;
        }

        .notification-list a {
            color: #0072ce;
            text-decoration: none;
        }

            .notification-list a:hover {
                text-decoration: underline;
            }

            .form-container button {
                background-color: #65C28B;
                color: white;
                padding: 12px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                font-size: 14px;
            }

                .form-container button:hover {
                    background-color: #58a77b;
                }

                .row{
                    display: flex;
                    width: 80%;
                }

            /* Create three unequal columns that floats next to each other */
            .column {
                float: left;
                padding: 5px;
                margin-left: 50px;
            }

                /* Left and right column */
                .column.side {
                    width: 30%;
                    font-size: 14px;
                }

                .column.left {
                    width: 30%;
                    background-color:#D8E3F2;
                }

