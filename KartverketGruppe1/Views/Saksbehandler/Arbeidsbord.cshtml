                        <p>Kristiansand, Agder</p>
                        <p></p> 
                        <p>01.10.2024</p>
                    </div>
                    </a>
                    <a href="@Url.Action("Behandling", "Saksbehandler")">
                    <div class="request">
                        <img src="~/Images/Anker.png" alt="Sjø">
                        <p>Kristiansand, Agder</p> 
                        <p></p> 
                        <p>01.10.2024</p>
                    </div>
                    </a>
                    <a href="@Url.Action("Behandling", "Saksbehandler")">
                    <div class="request">
                            <img src="~/Images/LocationRod.png" alt="Sted">
                        <p>Kristiansand, Agder</p> 
                        <p></p> 
                        <p>01.10.2024</p>
                    </div>
                    </a>
                    <a href="@Url.Action("Behandling", "Saksbehandler")">
                    <div class="request">
                            <img src="~/Images/Eiendom.png" alt="Eiendom">
                        <p>Kristiansand, Agder</p>
