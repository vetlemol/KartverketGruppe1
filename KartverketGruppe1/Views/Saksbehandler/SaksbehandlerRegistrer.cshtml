@model RegistrerSaksbehandlerViewModel

<h2>Registrer ny saksbehandler</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Saksbehandler" asp-action="Registrer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">E-post</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Passord</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fornavn">Fornavn</label>
                <input asp-for="Fornavn" class="form-control" />
                <span asp-validation-for="Fornavn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Etternavn">Etternavn</label>
                <input asp-for="Etternavn" class="form-control" />
                <span asp-validation-for="Etternavn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ansvarsområde">Ansvarsområde</label>
                <input asp-for="Ansvarsområde" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Avdeling">Avdeling</label>
                <input asp-for="Avdeling" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Registrer saksbehandler</button>
        </form>
    </div>
</div>