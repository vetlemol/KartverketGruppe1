@* @model KartverketGruppe1.ViewModels.InnmeldingViewModel

<div class="map-container">
    <div class="sidebar">
        <form id="innmeldingForm" asp-action="LagreInnmelding" asp-controller="Kart" method="post">
            <input type="hidden" asp-for="KoordinatID" id="KoordinatID" />
            <input type="hidden" asp-for="KommuneID" id="KommuneID" />
            <input type="hidden" asp-for="Dato" value="@DateTime.Now" />

            <div class="search-panel">
                <h3>Kommune Informasjon</h3>
                <div class="form-control" id="kommuneInfo">
                    <p>Kommunenavn: <span id="kommunenavn">-</span></p>
                    <p>Fylkesnummer: <span id="fylkesnummer">-</span></p>
                    <p>Kommunenummer: <span id="kommunenummer">-</span></p>
                </div>

                <h3>Type avvik</h3>
                <select class="form-control" asp-for="AvvikstypeID" required>
                    <option value="">Velg type avvik</option>
                    @foreach (var type in ViewBag.Avvikstyper)
                    {
                        <option value="@type.AvvikstypeID">@type.Beskrivelse</option>
                    }
                </select>

                <h3>Koordinater</h3>
                <div class="form-control">
                    <p>Latitude: <span id="latitude">-</span></p>
                    <p>Longitude: <span id="longitude">-</span></p>
                </div>

                <h3>Beskrivelse</h3>
                <textarea class="form-control" asp-for="Innmeldingsbeskrivelse" rows="4" required></textarea>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="form-group">
                        <h3>Din e-post</h3>
                        <input type="email" class="form-control" asp-for="Gjest_epost" />
                    </div>
                }

                <button type="submit" class="btn btn-success w-100 mt-3" id="submitBtn" disabled>
                    Send inn
                </button>
            </div>
        </form>
    </div>
    <div class="map-content">
        <div id="map"></div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet.pm@latest/dist/leaflet.pm.min.js"></script>

    <script>
        var map = L.map('map').setView([58.164048, 8.004007], 13);
        var currentLayer = null;

        L.tileLayer('https://cache.kartverket.no/v1/wmts/1.0.0/topo/default/webmercator/{z}/{y}/{x}.png', {
            maxZoom: 18,
            attribution: '&copy; <a href="http://www.kartverket.no/">Kartverket</a>'
        }).addTo(map);

        map.pm.addControls({
            position: 'bottomleft',
            drawMarker: true,
            removalMode: true,
            drawPolyline: true,
            drawCircleMarker: false,
            drawRectangle: false,
            drawCircle: false,
            drawPolygon: true,
            editMode: false,
            cutPolygon: false,
        });

        map.on('pm:create', async function (e) {
            if (currentLayer) {
                map.removeLayer(currentLayer);
            }
            currentLayer = e.layer;

            let coordinates;
            if (e.shape === 'Marker') {
                coordinates = e.layer.getLatLng();
            } else if (e.shape === 'Polygon') {
                coordinates = e.layer.getLatLngs()[0][0];
            } else if (e.shape === 'Line' || e.shape === 'Polyline') {
                coordinates = e.layer.getLatLngs()[0];
            }

            // Oppdater koordinat-visning
            document.getElementById('latitude').textContent = coordinates.lat.toFixed(5);
            document.getElementById('longitude').textContent = coordinates.lng.toFixed(5);

            try {
                // Først hent kommune-info fra API
                const kommuneResponse = await fetch(
                    `/api/Kommune/GetByCoordinate?lat=${coordinates.lat}&lng=${coordinates.lng}&koordsys=4258`
                );
                const kommuneData = await kommuneResponse.json();

                // Vis kommune-info
                document.getElementById('kommunenavn').textContent = kommuneData.kommunenavn || '-';
                document.getElementById('fylkesnummer').textContent = kommuneData.fylkesnummer || '-';
                document.getElementById('kommunenummer').textContent = kommuneData.kommunenummer || '-';

                // Lagre koordinat og kommune i databasen
                const lagreResponse = await fetch('/Kart/LagreKoordinatOgKommune', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        latitude: coordinates.lat,
                        longitude: coordinates.lng,
                        kommuneNummer: kommuneData.kommunenummer,
                        kommuneNavn: kommuneData.kommunenavn
                    })
                });

                if (!lagreResponse.ok) throw new Error('Feil ved lagring');

                const lagreData = await lagreResponse.json();

                // Oppdater skjulte felt
                document.getElementById('KoordinatID').value = lagreData.koordinatId;
                document.getElementById('KommuneID').value = lagreData.kommuneId;

                // Aktiver submit-knappen
                document.getElementById('submitBtn').disabled = false;

            } catch (error) {
                console.error('Error:', error);
                document.getElementById('kommunenavn').textContent = 'Feil ved henting';
                document.getElementById('fylkesnummer').textContent = '-';
                document.getElementById('kommunenummer').textContent = '-';
            }
        });
    </script>
} *@