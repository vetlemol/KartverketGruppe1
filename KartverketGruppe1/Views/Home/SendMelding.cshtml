@model KartverketGruppe1.Data.Meldinger

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meldingsboks</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f0f0f0;
        }

        textarea {
            width: 100%;
            height: 150px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: none;
        }

        .button-container {
            display: flex; /* Gjør knappene fleksible og plassert på samme linje */
            gap: 10px; /* Legger til mellomrom mellom knappene */
            align-items: center; /* Justerer knappene vertikalt */
        }

        button, a {
            display: inline-flex; /* Sørger for at innhold i knappen sentreres */
            justify-content: center; /* Sentrerer tekst horisontalt */
            align-items: center; /* Sentrerer tekst vertikalt */
            padding: 10px 20px; /* Sørger for samme størrelse */
            height: 40px; /* Setter en fast høyde for alle knappene */
            text-decoration: none; /* Fjerner understrek fra lenker */
            font-size: 14px; /* Sørger for lik tekststørrelse */
            border-radius: 5px; /* Gir avrundede hjørner */
        }

        .btn-success {
            background-color: #00973D;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #58a77b;
            }

        .btn-secondary {
            background-color: #ccc;
            color: black;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #999;
            }
    </style>
</head>
<body>

    @*Når brukeren sender skjemaet, sendes InnmeldingID automatisk til serveren som en del av dataene uten å være synlig for brukeren*@
<div class="container p-4">
    <form asp-action="NyMelding" method="post">
        <input type="hidden" name="InnmeldingID" value="@ViewBag.InnmeldingID" />

        @*Felt for å skrive inn meldingen. Feltet er påkrevd og har en placeholder som viser brukeren hva som skal skrives inn.*@
        <div class="form-group">
            <h2><label>Melding</label></h2>
                <textarea name="Innhold" class="form-control" rows="4" required placeholder="Skriv meldingen din her..."></textarea>
        </div>

       
        @*Knapp for å sende meldingen slik at den lagres i databasen og kan ses under alle meldinger. Og knapp for å avbryte.*@
        <div class="mt-3 button-container">
            <button type="submit" class="btn btn-success">Send melding</button>
            <a href="javascript:history.back()" class="btn btn-secondary">Avbryt</a>
        </div>
    </form>
</div>
</body>
</html>

