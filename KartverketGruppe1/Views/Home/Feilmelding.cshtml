@{
    ViewData["Title"] = "Kartikus Error";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kartverket</title>
    <style>
        body, html {
            margin: 0; /*Avstand fra innhold til sidene*/
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .background-image {
            background-image: url('/Bakgrunnsbilder/TestBryggeBilde.png'); /* Legg til ditt bakgrunnsbilde */
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Sørger for at bakgrunnsbildet ligger bak innholdet */
        }

        .container {
            height: calc(100% - 60px); /* For å ta høyde for top bar */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            background-color: #d8e3f2;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
            z-index: 1;
        }

            .form-container h2 {
                color: #00509C;
                margin-bottom: 20px;
            }

            .form-container p {
                margin-bottom: 20px;
                color: #333;
            }

            .form-container button {
                background-color: #8ebf94;
                color: white;
                padding: 12px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                font-size: 16px;
            }

                .form-container button:hover {
                    background-color: #58a77b;
                }

                .form-container img {
                    background-image: url('/Images/KartikusNy.png');
                    max-width: 150px;
                    margin-bottom: 10px;
                }
    </style>
</head>
<body>
    <div class="background-image"></div> <!-- Bakgrunnsbildet -->

    <div class="container">
        <div class="form-container">
            <img src="~/Images/KartikusNy.png" alt="Kartikus" />
            <h2>En feil har oppstått</h2>
            <p>Oops... her har det skjedd en feil <br /> Prøv igjen senere</p>
            <button onclick="redirectToIndex()">Prøv igjen</button>
        </div>
    </div>
    <script>
        function redirectToIndex() {
            window.location.href = "/Home/Index";
        }

        function redirectHome(){
            if (Role.IsUserInRole("Saksbehandler" ))
                window.location.href = "/Saksbehandler/Arbeidsbord";
            else
                window.location.href = "/Home/Index";)
        }
    </script>
</body>
</html>
