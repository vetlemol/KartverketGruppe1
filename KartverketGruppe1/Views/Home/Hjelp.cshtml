
@{
    ViewData["Title"] = "Hjelp / Kontakt Oss";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #EAE7E7;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Sørger for at body fyller hele skjermen */
    }

    .container {
        width: 75%;
        margin: 0 auto;
        padding: 50px 0;
        flex: 1; /* Hovedinnholdet strekker seg før footeren */
    }

    h2 {
        color: #2E7D32;
        border-bottom: 2px solid #2E7D32;
        display: inline-block;
    }

    .contact-info a, .help a {
        text-decoration: none;
        color: #2E7D32;
    }

    .contact-info a:hover, .help a:hover {
        text-decoration: underline;
    }
      /* CSS for å senke annen og fjerde boks */
    .row > div:nth-child(2),
    .row > div:nth-child(4) {
        margin-top: 40px; /* Juster høyden her som nødvendig */
    }


    .contact-icons {
        display: flex;
        align-items: center;
        margin: 10px 0;
    }
    .footer {
  background-color: #f8f8f8;
  padding: 20px;
  color: #333;
  border-top: 10px solid #006400; /* Legger til en 5px linje på toppen i fargen #006400 */
  text-align: left;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.footer-section {
  margin: 10px;
  flex: 1;
  min-width: 200px;
}

.footer-section h3 {
  margin-top: 0;
}

.footer-section a {
  color: #006400;
  text-decoration: none;
}

.footer-section a:hover,
.footer-link:hover {
  text-decoration: underline;
}

.footer-bottom {
  text-align: left;
  padding-top: 10px;
  border-top: 1px solid #ccc;
}


</style>

<body>
