@model KartverketGruppe1.Models.LagBrukerViewModel
@{
    ViewData["Title"] = "NyBruker";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kartverket</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-size: cover;
            background-position: center;
        }

        /* .background-image {
            background-image: url('/Images/TestBryggeBilde.png'); 
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
