@{
    ViewData["Title"] = "Kartikus Error";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kartverket</title>
    <style>
        body, html {
            margin: 0; /*Avstand fra innhold til sidene*/
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .background-image {
            background-image: url('/Bakgrunnsbilder/TestBryggeBilde.png'); /* Legg til ditt bakgrunnsbilde */
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Sørger for at bakgrunnsbildet ligger bak innholdet */
        }

        .container {
            height: calc(100% - 60px); /* For å ta høyde for top bar */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            background-color: #d8e3f2;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 600px;
            width: 100%;
            z-index: 1;
        }

            .form-container h2 {
                color: #00509C;
                margin-bottom: 20px;
            }

            .form-container p {
                margin-bottom: 20px;
                color: #333;
            }

            .form-container button {
                background-color: #8EBF94;
                color: white;
                padding: 12px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                font-size: 16px;
            }

                .form-container button:hover {
                    background-color: #58a77b;
                }

                .form-container img {
                    max-width: 150px;
                    margin-bottom: 10px;
                }
    </style>
</head>
<body>
    <div class="background-image"></div> <!-- Bakgrunnsbildet -->

     <div class="container">
        <div class="form-container">
            <img src="~/Images/KartikusGlad.png" alt="Kartikus" />
            <h2>Registrert!</h2>
            <p>Du vil nå få oppdateringer om din henvendelse på e-post</p>
            <button onclick="redirectToIndex()">Tilbake til forsiden</button>
        </div>
    </div>

    <!-- Inkluder canvas-confetti biblioteket -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js"></script>
    <script>
        // Funksjon for å vise konfetti
        function showConfetti() {
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 }
            });
        }

        // Kjør konfetti når siden lastes inn
        window.onload = showConfetti;

        function redirectToIndex() {
            window.location.href = "/Home/Index";
        }
    </script>
</body>
</html>

   