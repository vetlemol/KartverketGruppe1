@model List<KartverketGruppe1.Data.Status>
@{
    ViewData["Title"] = "Overview";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kartverket</title>
    <style>
    </style>
