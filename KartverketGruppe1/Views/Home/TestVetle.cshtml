    // Henter Kartverket sitt kart
    L.tileLayer('https://cache.kartverket.no/v1/wmts/1.0.0/topo/default/webmercator/{z}/{y}/{x}.png', {
        maxZoom: 18,
        attribution: '&copy; <a href="http://www.kartverket.no/">Kartverket</a>'

    }).addTo(map);

    // Finner første stedsnavn i listen og setter kartet til denne posisjonen
    // HomeController SokStedsnavn
    @if (Model.Any() && Model.First().Nord.HasValue && Model.First().Ost.HasValue)
    {
        @:map.setView([@Model.First().Nord, @Model.First().Ost], 13);
    }
    else
    {
        @:map.setView([58.164048, 8.004007], 13);
    }



        // Legger til Leaflet.pm kontroller
        map.pm.addControls({
            position: 'bottomleft',
            drawMarker: true,
            removalMode: true,
            drawPolyline: true,
            drawCircleMarker: false,
            drawRectangle: false,
            drawCircle: false,
            drawPolygon: true,
            editMode: false,
            cutPolygon: false,
        });

    // Handle map drawing events
    map.on('pm:create', function (e) {
        try {
            if (currentLayer) {
                map.removeLayer(currentLayer);
            }
            currentLayer = e.layer;

            let coordinates;
            let geometryType = e.shape;

            // Store the geometry type
            if (document.getElementById("GeometryType")) {
                document.getElementById("GeometryType").value = geometryType;
            }

            if (geometryType === 'Marker') {
                const lat = e.layer.getLatLng().lat;
                const lng = e.layer.getLatLng().lng;
                coordinates = [[lat, lng]];
            }
            else if (geometryType === 'Polygon') {
                coordinates = e.layer.getLatLngs()[0].map(coord => [coord.lat, coord.lng]);
            }
            else if (geometryType === 'Line' || geometryType === 'Polyline') {
                coordinates = e.layer.getLatLngs().map(coord => [coord.lat, coord.lng]);
            }

            // Store coordinates in form
            if (coordinates && document.getElementById("Koordinater")) {
                const geometryInfo = coordinates.map(coord => coord.join(',')).join(';');
                document.getElementById("Koordinater").value = geometryInfo;
            }

            // Get municipality info for the first coordinate or center point
            const lookupCoord = coordinates[0];
            fetch(`/api/Kommune/GetByCoordinates?lat=${lookupCoord[0]}&lng=${lookupCoord[1]}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data && document.getElementById("KommuneNavn") && document.getElementById("KommuneNummer")) {
                        document.getElementById("KommuneNavn").value = data.kommunenavn;
                        document.getElementById("KommuneNummer").value = data.kommunenummer;

                        // Optional: Add popup to the map showing kommune info
                        e.layer.bindPopup(`Kommune: ${data.kommunenavn}`).openPopup();
                    }
                })
                .catch(error => console.error('Error:', error));
        } catch (error) {
            console.error('Error in pm:create event handler:', error);
        }
    });

    // Form submission validation
    document.getElementById('avvikForm').addEventListener('submit', function (e) {
        const koordinater = document.getElementById("Koordinater");
        if (!koordinater || !koordinater.value) {
            e.preventDefault();
            alert("Vennligst velg en posisjon på kartet.");
