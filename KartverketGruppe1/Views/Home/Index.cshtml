 @{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-size: cover;
        background-position: center;
        font-family: Arial, sans-serif;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        padding: 20px;
        width: 320px;
        position: absolute;
        top: 375px; /*Endret fra 55% til 375px*/
        left: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .login-container h2 {
            margin-bottom: 10px;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .btn-block {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: white;
    }

    .separator {
        text-align: center;
        margin: 15px 0;
        color: #777;
    }

    .btn-google, .btn-facebook, .btn-apple {
        text-align: left;
        padding-left: 45px;
        position: relative;
    }

    .btn-google {
        background-color: #fff;
        color: #757575;
        border: 1px solid #ddd;
    }

    .btn-facebook {
        background-color: #3b5998;
        color: #fff;
    }

    .btn-apple {
        background-color: #000;
        color: #fff;
    }

        .btn-google img, .btn-facebook img, .btn-apple img {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
        }

    .register-link, .guest-link {
        color: #4CAF50;
        text-decoration: none;
    }

    .guest-link {
        display: block;
        margin-bottom: 15px;
        color: #777;
    }

    .temporary-notice {
        position: fixed;
        bottom: 20px;
        left: 20px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px;
        border-radius: 5px;
    }
</style>

<div class="login-container">
    <h2>Logg på</h2>
    <p>Har du ikke konto? <a href="Home/LagBruker" class="register-link">Registrer deg</a></p>
    <a href="/Home/KartInnmelding" class="guest-link">Fortsett som gjest</a>

    <form asp-action="LogInn" asp-controller="Home" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="Username" placeholder="Brukernavn" required>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="Password" placeholder="Passord" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Fortsett</button>
    </form>

    <div class="separator">eller</div>

    <button class="btn btn-google btn-block" onclick="redirectToHjemSkjermGjest">
        <img src="~/images/GoogleIcon.png" alt="Google icon" /> Fortsett med Google
    </button>
    <button class="btn btn-facebook btn-block" onclick="redirectToHjemSkjermGjest">
        <img src="~/images/FacebookIcon.png" alt="Facebook icon" /> Fortsett med Facebook
    </button>
    <button class="btn btn-apple btn-block" onclick="redirectToHjemSkjermGjest">
        <img src="~/images/AppleIconWhite.png" alt="Apple icon" /> Fortsett med Apple
    </button>

</div>

<a href="Saksbehandler/SaksbehandlerStart">
    <div class="temporary-notice" >
        <p>Saksbehandler</p>
    </div>
</a>
<script>
    function redirectToHjemSkjermGjest() {
        window.location.href = "/Home/Privacy";
    }

    function setRandomBackground() { // Funksjon for å hente random bilde fra 'Bakgrunnsbilder'
        fetch('/Home/GetRandomBackgroundImage')
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    console.error(data.error);
                } else {
                    document.body.style.backgroundImage = `url('${data.imagePath}')`;
                }
            })
            .catch(error => console.error('Error:', error));
    }


    window.onload = setRandomBackground;
</script>