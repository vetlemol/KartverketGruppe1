    }

    .map-content {
        flex: 1;
        position: relative;
        background-color: #e5e5e5;
    }

    .map-tools {
        position: absolute;
        left: 20px;
        top: 20px;
        background: white;
        padding: 10px;
        border-radius: 4px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        z-index: 1000;
    }

    .tool-btn {
        display: block;
        width: 100%;
        padding: 8px;
        margin: 4px 0;
        border: none;
        background: none;
        text-align: left;
        cursor: pointer;
    }

        .tool-btn:hover {
