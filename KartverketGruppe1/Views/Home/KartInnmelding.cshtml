<style>

    .map-container {
        display: flex;
        height: calc(100vh - 60px); /* Justert for navbar */
        width: 100%;
        position: absolute;
        top: 60px;
        left: 0;
    }

    .sidebar {
        width: 350px;
        background-color: #f0f4f8;
        padding: 20px;
        overflow-y: auto;
    }

    .search-panel h3 {
        font-size: 16px;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .upload-box {
        border: 2px dashed #ccc;
        padding: 20px;
        text-align: center;
        border-radius: 4px;
