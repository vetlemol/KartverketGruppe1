<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KartverketGruppe1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KartverketGruppe1.styles.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 50px; /* Juster denne verdien etter høyden på navigasjonslinjen */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-0 custom-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="KartInnmelding">
                    <img src="~/Images/logoKartverketstrl.png" alt="Kartverket logo" class="logo"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                       

                        
                         
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Meny
                            </a>
                          
                        <ul class="dropdown-menu dropdown-menu-end custom-dropdown-menu" aria-labelledby="navbarDropdown">
                        <li class="divider"><hr class="dropdown-divider"></li>
                        <li><img src="~/Images/KartikusGlad.png" alt="Profilbilde" width="60" height="70"></li>
                        <li class="spacer"><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BrukerProfil">Min Profil</a></li>
                        <li class="divider"><hr class="dropdown-divider"></li> 
                        <li class="spacer"><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MineInnmeldinger">Mine innmeldinger</a></li>
                        <li class="divider"><hr class="dropdown-divider"></li> 
                        <li class="spacer"><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Hjelp">Hjelp / Kontakt Oss</a></li> 
                        <li class="divider"><hr class="dropdown-divider"></li> 
                      <li class="logout"><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Logg ut</a></li>
                     
                <style>
    li.spacer a {
      color: #00973D;
      background-color: #E4F2E6;
    }

    li.spacer a:hover {
      color: #00973D;
      background-color: #E4F2E6;
      text: underline
    }

    li.logout a {
      color: #00973D;
      background-color: #E4F2E6;
    }
    li.logout a:hover {
      color: #00973D;
      background-color: #E4F2E6;
      text: underline;
    }


  </style>
  </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container"style="padding-top: 50px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
